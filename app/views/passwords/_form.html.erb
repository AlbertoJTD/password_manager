<%= form_with model: password, class: 'mt-6' do |f| %>
  <% if f.object.errors.any? %>
    <%= render Shared::ErrorListComponent.new do %>
      <% f.object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    <% end %>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= f.label :service, t('passwords.forms.service_label'), class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <%= f.text_field :service, 
          class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors outline-none',
          placeholder: t('passwords.forms.service_placeholder') %>
    </div>

    <div>
      <%= f.label :url, t('passwords.forms.url_label'), class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <%= f.text_field :url, 
          class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors outline-none',
          placeholder: t('passwords.forms.url_placeholder') %>
    </div>

    <div>
      <%= f.label :username, t('passwords.forms.username_label'), class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <%= f.text_field :username, 
          class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors outline-none',
          placeholder: t('passwords.forms.username_placeholder') %>
    </div>

    <div>
      <%= f.label :password, t('passwords.forms.password_label'), class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <%= f.text_field :password, 
          class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors outline-none',
          placeholder: t('passwords.forms.password_placeholder') %>
    </div>
  </div>

  <div class="mt-8 flex items-center justify-end gap-3 pt-6 border-t border-gray-200">
    <% if password.persisted? %>
      <%= button_tag t('passwords.delete'), 
          form: 'delete_password', 
          type: 'button',
          class: 'px-6 py-2.5 bg-red-500 text-white rounded-lg font-medium hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors' %>
    <% end %>
    <%= f.submit password.persisted? ? t('passwords.update.title') : t('passwords.save'), 
        class: 'px-6 py-2.5 bg-blue-500 text-white rounded-lg font-medium hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors' %>
  </div>
<% end %>

<%= form_with model: password, method: :delete, id: 'delete_password', data: { turbo_confirm: t('passwords.delete_confirm') }, class: 'hidden' %>