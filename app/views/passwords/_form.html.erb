<%= form_with model: password do |f| %>
  <div class="">
    <% f.object.errors.full_messages.each do |message| %>
      <div class="text-red-500"><%= message %></div>
    <% end %>
  </div>

  <div class="space-y-3 mb-5">
    <div>
      <%= f.label :service %>
      <%= f.text_field :service, class: 'border-b border-b-gray-800' %>
    </div>

    <div>
      <%= f.label :url %>
      <%= f.text_field :url, class: 'border-b border-b-gray-800' %>
    </div>

    <div>
      <%= f.label :username %>
      <%= f.text_field :username, class: 'border-b border-b-gray-800' %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.text_field :password, class: 'border-b border-b-gray-800' %>
    </div>
  </div>

  <%= f.submit 'Save Password', class: 'bg-blue-500 text-white rounded-md px-4 py-2 hover:bg-blue-600' %>
  <%= button_tag 'Delete', form: 'delete_password', class: 'bg-red-500 text-white rounded-md px-4 py-2 hover:bg-red-600' if password.persisted? %>
<% end %>

<%= form_with model: password, method: :delete, id: 'delete_password', data: { turbo_confirm: 'Are you sure you want to delete this password?' } %>