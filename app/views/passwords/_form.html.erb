<%= form_with model: password, class: 'mt-6' do |f| %>
  <% if f.object.errors.any? %>
    <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3 flex-1">
          <h3 class="text-sm font-medium text-red-800 mb-2">
            Please correct the following errors:
          </h3>
          <ul class="list-disc list-inside text-sm text-red-700 space-y-1">
            <% f.object.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= f.label :service, class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <%= f.text_field :service, 
          class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors outline-none',
          placeholder: 'e.g., Gmail, GitHub, Facebook' %>
    </div>

    <div>
      <%= f.label :url, class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <%= f.text_field :url, 
          class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors outline-none',
          placeholder: 'https://example.com' %>
    </div>

    <div>
      <%= f.label :username, class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <%= f.text_field :username, 
          class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors outline-none',
          placeholder: 'Enter your username or email' %>
    </div>

    <div>
      <%= f.label :password, class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <%= f.password_field :password, 
          class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors outline-none',
          placeholder: 'Enter your password' %>
    </div>
  </div>

  <div class="mt-8 flex items-center justify-end gap-3 pt-6 border-t border-gray-200">
    <% if password.persisted? %>
      <%= button_tag 'Delete', 
          form: 'delete_password', 
          type: 'button',
          class: 'px-6 py-2.5 bg-red-500 text-white rounded-lg font-medium hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors' %>
    <% end %>
    <%= f.submit password.persisted? ? 'Update Password' : 'Save Password', 
        class: 'px-6 py-2.5 bg-blue-500 text-white rounded-lg font-medium hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors' %>
  </div>
<% end %>

<%= form_with model: password, method: :delete, id: 'delete_password', data: { turbo_confirm: 'Are you sure you want to delete this password?' }, class: 'hidden' %>