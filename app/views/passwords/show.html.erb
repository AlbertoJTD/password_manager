<h2 class="text-4xl font-bold text-blue-800"><%= @password.url %></h2>

<div class="my-2">
  <%= link_to 'Edit', edit_password_path(@password), class: 'bg-blue-500 text-white rounded-md px-4 py-2 hover:bg-blue-600' %>
  <%= link_to 'Delete', password_path(@password), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this password?' },
                                                  class: 'bg-red-500 text-white rounded-md px-4 py-2 hover:bg-red-600' %>
</div>

<pre class="rounded-md bg-cyan-950 px-4 py-2 text-white w-1/3 mb-2">
  <code><%= @password.username %></code>
</pre>
<pre class="rounded-md bg-cyan-950 px-4 py-2 text-white w-1/3">
  <code><%= @password.password %></code>
</pre>