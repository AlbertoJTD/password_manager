<div>
  <h1 class="font-bold text-4xl text-blue-800">Password Manager</h1>

  <div class="my-2">
    <%= link_to 'New Password', new_password_path, class: 'bg-blue-500 text-white rounded-md px-4 py-2 hover:bg-blue-600' %>
  </div>

  <ul>
    <% @passwords.each do |password| %>
      <li><%= password.name %></li>
    <% end %>
  </ul>
</div>
