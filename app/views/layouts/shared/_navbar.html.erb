<nav class="flex items-center justify-between mb-10">
  <div class="flex items-center gap-2">
    <%= link_to t('app_name'), root_path, class: 'text-2xl font-bold hover:underline' %>

    <% if user_signed_in? %>
      <ul>
        <li><%= link_to t('home'), root_path, class: 'hover:underline' %></li>
      </ul>
    <% end %>
  </div>

  <div class="flex items-center gap-4">
    <div class="flex items-center gap-2">
      <%= link_to 'EN', url_for(locale: :en), class: "px-2 py-1 rounded #{I18n.locale == :en ? 'bg-blue-500 text-white' : 'text-gray-600 hover:bg-gray-100'}" %>
      <%= link_to 'ES', url_for(locale: :es), class: "px-2 py-1 rounded #{I18n.locale == :es ? 'bg-blue-500 text-white' : 'text-gray-600 hover:bg-gray-100'}" %>
    </div>
    <ul class="list-none flex gap-2">
      <% if user_signed_in? %>
        <li><%= link_to t('profile'), edit_user_registration_path, class: 'hover:underline'%></li>
        <li><%= link_to t('logout'), destroy_user_session_path, data: { turbo_method: :delete }, class: 'hover:underline'%></li>
      <% else %>
        <li><%= link_to t('login'), new_user_session_path, class: 'hover:underline'%></li>
        <li><%= link_to t('sign_up'), new_user_registration_path, class: 'hover:underline'%></li>
      <% end %>
    </ul>
  </div>
</nav>
